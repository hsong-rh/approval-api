<p id="notice"><%= notice %></p>
<style>
table {
  border-collapse: collapse;
}

table, td, th {
  border: 1px solid black;
}

td {
  height: 50px;
  vertical-align: bottom;
}

th, td {
  padding: 15px;
  text-align: center;
}

tr:hover {background-color: #f5f5f5;}
</style>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Request ID</th>
      <th>Requester</th>
      <th>Name</th>
      <th>State</th>
      <th>Decision</th>
      <th>Reason</th>
      <th>Workflow ID</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.id %></td>
        <td><%= request.requester %></td>
        <td><%= request.name %></td>
        <td><%= request.state %></td>
        <td><%= request.decision %></td>
        <td><%= request.reason %></td>
        <td><%= request.workflow_id %></td>
        <td><%= link_to 'Show', request %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<hr>

<div style="float:left; overflow: hidden;">
  <span style="padding: 15px; display:inline-block;">
    <h1>Groups</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Contacts</th>
          <th>Workflow ID</th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= group.id %></td>
            <td><%= group.name %></td>
            <td><%= group.contact_setting %></td>
            <td><%= group.workflow_ids %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </span>
  <span style="padding: 15px; display:inline-block;">
    <h1>Workflows</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Description</th>
          <th>Group IDs</th>
        </tr>
      </thead>
      <tbody>
        <% @workflows.each do |workflow| %>
          <tr>
            <td><%= workflow.id %></td>
            <td><%= workflow.name %></td>
            <td><%= workflow.description %></td>
            <td><%= workflow.group_ids %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </span>
</div>

<br>




